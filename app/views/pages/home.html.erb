<div class="banner">
  <div class="header-container d-flex justify-content-center flex-column align-items-center">
    <div>
      <%= image_tag "freshout-logo-big.png", alt: "text" , class: "w-50"%>
      <p class="mt-3 px-2 home-slogan">Keep track of your kitchen's food and stop wasting food</p>
    </div>
    <div class="d-flex flex-column align-items-center gap-2 button-container">
      <%= link_to "Shopping List" , shopping_list_path(current_user.house.shopping_lists.first), class: "button" %>
      <% if @foods.any?  %>
        <%= link_to house_foods_path do %>
          <div class="button warning-button">
            <h3>Inventory</h3>
            <p> Expiring Foods: <%= @foods.count  %> </p>
          </div>
        <% end %>
      <% else %>
        <%= link_to house_foods_path , class: "button inventory-button" do %>
          <p>Inventory</p>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
